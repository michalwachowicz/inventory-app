<div id="genres-menu" class="genres hidden">
  <button
    id="btn-close-genres"
    class="btn genres__btn--close"
    aria-label="close genres menu"
  >
    <img src="/assets/icons/close.svg" alt="" width="32" height="32" />
  </button>

  <div class="genres__container">
    <% if (locals.genres && locals.genres.length > 0) { %>
    <nav class="genres__nav">
      <ul class="genres__list">
        <% locals.genres.forEach((genre) => { %>
        <li class="genres__list-item">
          <a
            class="genres__link"
            href="/results?<%= baseQueryString ? baseQueryString + '&' : '' %>genreId=<%= genre.id %>"
          >
            <%= genre.name %>
          </a>
        </li>
        <% }); %>
      </ul>
    </nav>
    <% } else { %>
    <div class="genres__empty">
      <img
        class="genres__img--empty"
        src="/assets/images/sad-book.svg"
        alt="A sad book"
      />
      <p class="genres__desc">
        Itâ€™s empty here...<br />
        Add a genre to start organizing your shelf
      </p>
    </div>
    <% } %>

    <%- include("add-button", { href: "/genre/add", classes: "genres__btn--add", title: "Add new genre"}) %>
  </div>
</div>
