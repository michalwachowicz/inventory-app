<% if (locals.navbar && (locals.navbar === "full" || locals.navbar === "basic"))
{ %>
<header class="navbar">
  <div class="navbar__container">
    <a href="/" class="navbar__logo">BookInventory</a>

    <div class="navbar__btns">
      <button class="navbar__btn" aria-label="search">
        <img src="/assets/icons/search.svg" alt="" width="32" height="32" />
      </button>

      <button class="navbar__btn" aria-label="add menu">
        <img src="/assets/icons/add.svg" alt="" width="32" height="32" />
      </button>
    </div>
  </div>

  <% if (locals.navbar === "full") { %> <%- include("genre-chip") %> <% } %>
</header>
<% } %>
